{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@Core/*": ["core/*"],
      "@Presentation/*": ["presentation/*"],
      "@Domain/*": ["domain/*"],
      "@Data/*": ["data/*"],
      "exclude": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
